<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/notesListFragment">
    <fragment
        android:id="@+id/notesListFragment"
        android:name="com.education.notes.presentation.fragments.notes.list.NotesListFragment"
        android:label="Notes"
        tools:layout="@layout/fragment_notes_list" >
        <action
            android:id="@+id/action_notesListFragment_to_updateNotesFragment"
            app:destination="@id/updateNotesFragment" />
        <action
            android:id="@+id/action_notesListFragment_to_addNotesFragment"
            app:destination="@id/addNotesFragment" />
    </fragment>
    <fragment
        android:id="@+id/tasksFragment"
        android:name="com.education.notes.presentation.fragments.tasks.TasksFragment"
        android:label="fragment_tasks"
        tools:layout="@layout/fragment_tasks" />
    <fragment
        android:id="@+id/addNotesFragment"
        android:name="com.education.notes.presentation.fragments.notes.add.AddNotesFragment"
        android:label="Add"
        tools:layout="@layout/fragment_add_notes" >
        <action
            android:id="@+id/action_addNotesFragment_to_notesListFragment"
            app:destination="@id/notesListFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateNotesFragment"
        android:name="com.education.notes.presentation.fragments.notes.update.UpdateNotesFragment"
        android:label="Refresh" >
        <action
            android:id="@+id/action_updateNotesFragment_to_notesListFragment"
            app:destination="@id/notesListFragment" />
    </fragment>
</navigation>